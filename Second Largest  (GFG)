class Solution {
  public:
    int getSecondLargest(vector<int> &arr) {
        // code here
          
          int maxNum = INT_MIN;
          int secondMax = -1;
          
          
           for(int i =0;i<arr.size();i++){
                 maxNum = max(maxNum , arr[i]);
           }
            
           for(int i =0;i<arr.size();i++){
                 
                 if(arr[i]!=maxNum){
                     secondMax =  max(secondMax,arr[i]);
                     
                 }
           }
           
           
           return secondMax;
    }
};
