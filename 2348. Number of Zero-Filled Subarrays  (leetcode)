class Solution {
public:
    long long zeroFilledSubarray(vector<int>& nums) {
        long coutZero = 0, streak = 0;
        for (int i = 0; i < nums.size(); i++) {
            if (nums[i] == 0) {
                streak++;
                coutZero += streak;
            } else {
                streak = 0;
            }
        }

        // if (coutZero == 0) {
        //     return 0;
        // } else if (coutZero == 1) {
        //     return 1;
        // }

        // for (int i = 0; i < nums.size() - 1; i++) {
        //     if (nums[i] == 0 && nums[i + 1] == 0) {
        //         for (int j = i + 1; j < nums.size(); j++) {
        //             if (nums[i] == nums[j]) {
        //                 coutZero++;
        //             } else {
        //                 break;
        //             }
        //         }
        //     }
        // }
        return coutZero;
    }
};
