class Solution {
public:
    void reverse(vector<int>& nums, int start, int end) {
        while (start <end) {
            swap(nums[start], nums[end]);
            start++;
            end--;
        }
    }

    bool check(vector<int>& nums) {
        int size = nums.size();
        int position = -1;

        for (int i = 0;i<size-1;i++) {
            if (nums[i] > nums[i + 1]) {
                position = i;
                break;
            }
        }
       
      
        if (position != -1) {
            if (position >0) {
                reverse(nums, 0, position);
            }
            if (position+1 != size - 1) {

                reverse(nums, position + 1, size - 1);
            }
            reverse(nums, 0, size - 1);
        }

        for (int i = 0; i < size-1; i++) {
            if (!(nums[i] <= nums[i + 1])) {
                return false;
            }
           
        }

        return true;
    }
};
