class Solution {
public:
    int xorAfterQueries(vector<int>& nums, vector<vector<int>>& queries) {
         long long int MOD = 1000000007;

        for (int i = 0; i < queries.size(); i++) {

            long int start = queries[i][0];
            long int end = queries[i][1];
            long int step = queries[i][2];
            long int multiplier = queries[i][3];

            while (start <= end) {
                nums[start] = (nums[start] * multiplier) % MOD;

                start += step;
            }
        }

        long int ans = nums[0];

        for (int i = 1; i < nums.size(); i++) {
            ans = ans ^ nums[i];
        }

        return ans;
    }
};
