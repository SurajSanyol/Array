class Solution {
public:
    vector<int> zigzagTraversal(vector<vector<int>>& mat) {
        vector<int> ans;

        int rowSize = mat.size();
        int colSize = mat[0].size();

        for (int i = 0; i < rowSize; i++) {
            if (i & 1) {
                //  for odd
                for (int j = colSize - 1; j >= 0; j--) {
                    if (j & 1) {

                        ans.push_back(mat[i][j]);
                    }
                }
            } else {
                // for even
                for (int j = 0; j < colSize; j += 2) {
                    ans.push_back(mat[i][j]);
                }
            }
        }

        return ans;
    }
};
